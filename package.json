{
    "name": "desktop-schedule",
    "version": "1.0.0",
    "description": "Desktop Schedule Application - Laravel Inertia React Desktop App",
    "author": "Your Company",
    "private": true,
    "type": "module",
    "main": "electron-main.cjs",
    "homepage": "./",
    "scripts": {
        "build": "vite build",
        "build:ssr": "vite build && vite build --ssr",
        "dev": "vite",
        "dev-full": "concurrently \"php artisan serve\" \"npm run dev\"",
        "format": "prettier --write resources/",
        "format:check": "prettier --check resources/",
        "lint": "eslint . --fix",
        "electron": "electron .",
        "electron:dev": "cross-env NODE_ENV=development electron .",
        "electron:pack": "npm run build && electron-builder",
        "electron:dist": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && electron-builder --publish=never",
        "electron:build": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --dir",
        "postinstall": "electron-builder install-app-deps"
    },
    "devDependencies": {
        "@eslint/js": "^9.19.0",
        "cross-env": "^7.0.3",
        "electron": "^36.4.0",
        "electron-builder": "^26.0.12",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-react": "^7.37.3",
        "eslint-plugin-react-hooks": "^5.1.0",
        "prettier": "^3.4.2",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "wait-on": "^8.0.3"
    },
    "dependencies": {
        "@headlessui/react": "^2.2.0",
        "@inertiajs/react": "^2.0.0",
        "@radix-ui/react-avatar": "^1.1.3",
        "@radix-ui/react-checkbox": "^1.1.4",
        "@radix-ui/react-collapsible": "^1.1.3",
        "@radix-ui/react-dialog": "^1.1.6",
        "@radix-ui/react-dropdown-menu": "^2.1.6",
        "@radix-ui/react-label": "^2.1.2",
        "@radix-ui/react-navigation-menu": "^1.2.5",
        "@radix-ui/react-select": "^2.1.6",
        "@radix-ui/react-separator": "^1.1.2",
        "@radix-ui/react-slot": "^1.1.2",
        "@radix-ui/react-toggle": "^1.1.2",
        "@radix-ui/react-toggle-group": "^1.1.2",
        "@radix-ui/react-tooltip": "^1.1.8",
        "@tailwindcss/vite": "^4.0.6",
        "@vitejs/plugin-react": "^4.3.4",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "concurrently": "^9.0.1",
        "globals": "^15.14.0",
        "laravel-vite-plugin": "^1.0",
        "lucide-react": "^0.475.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "tailwind-merge": "^3.0.1",
        "tailwindcss": "^4.0.0",
        "tailwindcss-animate": "^1.0.7",
        "vite": "^6.0"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "4.9.5",
        "@tailwindcss/oxide-linux-x64-gnu": "^4.0.1",
        "lightningcss-linux-x64-gnu": "^1.29.1"
    },
    "build": {
        "appId": "com.yourcompany.desktopschedule",
        "productName": "Desktop Schedule",
        "directories": {
            "output": "dist-final"
        },
        "files": [
            "electron-main.cjs",
            "public/build/**/*",
            "public/storage/**/*",
            "public/favicon.ico",
            "public/PDFLogo.svg",
            "public/index.php",
            "public/.htaccess",
            "bootstrap/app.php",
            "bootstrap/cache/**/*",
            "config/**/*",
            "database/**/*",
            "resources/views/**/*",
            "routes/**/*",
            "storage/app/**/*",
            "storage/framework/**/*",
            "storage/logs/.gitignore",
            "app/**/*",
            "vendor/**/*",
            "artisan",
            "composer.json",
            "composer.lock",
            ".env.desktop",
            "!resources/js/**/*",
            "!resources/css/**/*",
            "!resources/scss/**/*",
            "!resources/ts/**/*",
            "!resources/sass/**/*",
            "!node_modules/.cache/**/*",
            "!node_modules/**/*.md",
            "!node_modules/**/*.txt",
            "!node_modules/**/test/**/*",
            "!node_modules/**/tests/**/*",
            "!node_modules/**/__tests__/**/*",
            "!node_modules/**/docs/**/*",
            "!node_modules/**/example/**/*",
            "!node_modules/**/examples/**/*",
            "!storage/logs/**/*",
            "!tests/**/*",
            "!phpunit.xml",
            "!*.log"
        ],
        "asar": false,
        "win": {
            "target": "portable",
            "forceCodeSigning": false
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": true
        },
        "mac": {
            "target": "dmg"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}
